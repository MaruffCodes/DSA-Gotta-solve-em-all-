//Reversing an array using Recursion
#include<bits/stdc++.h>
using namespace std;
void f(int i,int n,int arr[]){
    if (i>=n/2){
        return;
    }
    swap(arr[i],arr[n-i-1]);
    f(i+1,n,arr);
}
int main() {
    int n=7;
    int arr[n]={2,3,1,3,1,4,5};
    f(0,n,arr);
    for (int i=0;i<n;i++){
        cout <<arr[i]<<" ";
    }

    return 0;
}
